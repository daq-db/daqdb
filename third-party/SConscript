Import('env')

SConscript('./cChord/SConscript', exports='env')

# libfabric
SConscript('./SConscript-libfabric', exports='env')

# pmdk
SConscript('./SConscript-pmdk', exports='env')

# pmemkv
SConscript('./SConscript-pmemkv', exports='env')

# linenoise
env.Append(CPPPATH = [Dir('#third-party/linenoise')])
env.Append(LIBPATH=[Dir('./linenoise')])
env.Library('./linenoise/linenoise', Glob('./linenoise/*.c'))

# cpu-stat
env.Append(CPPPATH = [Dir('#third-party/cpu-stat/src')])
env.Append(LIBPATH=[Dir('./cpu-stat')])
env.Library('./cpu-stat/cpu-stat', Glob('./cpu-stat/src/*.cpp'))

# csvpp
env.Append(CPPPATH = [Dir('#third-party/csvpp/src')])
env.Append(LIBPATH=[Dir('./csvpp/src/csv')])
env.Library('./csvpp/csvpp', Glob('./csvpp/src/*.cpp'))

# spdk
SConscript('./SConscript-spdk', exports='env')
