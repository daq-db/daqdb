Import('env')

libfabric_include = [
	Dir('./libfabric/include'),
	]
libfabric_libs = [
	Dir('#/bin/fabric/lib'),
	]
libfabric_rpath = [
	'fabric/lib',
	]

env.Append(CPPPATH = libfabric_include)
env.Append(LIBPATH = libfabric_libs)
env.Append(RPATH = libfabric_rpath)

libfabric = env.Command('#/bin/fabric/lib/libfabric.so', "", 'cd %s && libtoolize && ./autogen.sh && ./configure --prefix=%s &&  make install' % (Dir('#/third-party/libfabric').abspath, Dir('#/bin/fabric/').abspath))
env.Clean(libfabric, '#/bin/fabric')
